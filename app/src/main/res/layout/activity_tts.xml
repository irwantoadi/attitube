<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bgmenu">
    <!--    <TextView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="fragment beranda"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:scaleType="fitStart"
                android:src="@drawable/icon_app"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:scaleType="fitEnd"
                android:src="@drawable/info"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/drop_zone"
                    android:layout_width="350dp"
                    android:layout_height="435dp"
                    android:background="@drawable/teka_teki"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="-30dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/kosong1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="92dp"
                        android:layout_marginLeft="109dp"
                        android:orientation="vertical"/>
                    <LinearLayout
                        android:id="@+id/kosong2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="92dp"
                        android:layout_marginLeft="36dp"
                        android:orientation="vertical"/>
                    <LinearLayout
                        android:id="@+id/kosong3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="92dp"
                        android:layout_marginLeft="0dp"
                        android:orientation="vertical"/>
                    <LinearLayout
                        android:id="@+id/kosong4"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="92dp"
                        android:layout_marginLeft="36dp"
                        android:orientation="vertical"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/soal_berbicara_dengan_orang_tua_harus_dengan_sopan"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bgsoal"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/id_v"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/kotak_v"/>
                    <ImageView
                        android:id="@+id/id_s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:src="@drawable/kotak_s"/>
                    <ImageView
                        android:id="@+id/id_o"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:src="@drawable/kotak_o"/>
                    <ImageView
                        android:id="@+id/id_h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:src="@drawable/kotak_h"/>
                    <ImageView
                        android:id="@+id/id_t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:src="@drawable/kotak_t"/>
                    <ImageView
                        android:id="@+id/id_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:src="@drawable/kotak_b"/>

                    <Button
                        android:id="@+id/btn_restart"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/panah" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/id_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:src="@drawable/kotak_a"/>
                    <ImageView
                        android:id="@+id/id_n"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:src="@drawable/kotak_n"/>
                    <ImageView
                        android:id="@+id/id_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:src="@drawable/kotak_d"/>
                    <ImageView
                        android:id="@+id/id_a2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:src="@drawable/kotak_a"/>
                    <ImageView
                        android:id="@+id/id_r"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:src="@drawable/kotak_r"/>
                    <ImageView
                        android:id="@+id/id_n2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:src="@drawable/kotak_n"/>
                    <Button
                        android:id="@+id/btn_selesai"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_selesai"/>

                </LinearLayout>

            </LinearLayout>
            </ScrollView>
<!--            <Linea-->
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>